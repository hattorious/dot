[user]
	name = Ross Hattori
	email = git@exstasis.net
[core]
	excludesfile = ~/.gitignore_global
	editor = vim
	whitespace = trailing-space,space-before-tab
[difftool "sourcetree"]
	cmd = /usr/local/bin/ksdiff -w \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[branch]
	autosetuprebase = always
[mergetool]
	keepBackup = true
[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = auto
[commit]
    template = ~/.gitcommittemplate
[gc]
    auto = 1
[diff]
	renames = copies
[rerere]
	enabled = true
[merge]
    summary = true
    stat = true
[alias]
    tree = log --graph --pretty=oneline --abbrev-commit --decorate --color
    cp = cherry-pick -x
    b = branch -v
    r = remote -v
    t = tag -l
    unstage = reset HEAD
    uncommit = reset --soft HEAD^
    co = checkout
    ci = commit
    st = status
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short --abbrev-commit --decorate --color
    type = cat-file -t
    dump = cat-file -p
[push]
	default = simple

# Allow local customizations in the .gitconfig.local file
[include]
    path = ~/.gitconfig.local
